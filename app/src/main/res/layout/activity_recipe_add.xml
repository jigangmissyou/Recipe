<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/edit_text_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients" />

    <LinearLayout
        android:id="@+id/layout_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_ingredient_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_text_ingredient_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ingredient" />
            <Button
                android:id="@+id/button_add_ingredient"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:id="@+id/button_del_ingredient"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_recipe_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps" />

        <LinearLayout
            android:id="@+id/layout_step_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edit_text_step_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Step" />

            <Button
                android:id="@+id/button_add_step"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:id="@+id/button_del_step"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_add_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add recipe" />

</LinearLayout>
