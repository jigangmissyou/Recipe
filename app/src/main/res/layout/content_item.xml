<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Picture on the left -->
        <ImageView
            android:id="@+id/content_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>

        <!-- Title -->
        <TextView
            android:id="@+id/content_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/content_image_view"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Short description -->
        <TextView
            android:id="@+id/content_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_title_text_view"
            android:layout_toEndOf="@id/content_image_view"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"/>

        <!-- Thumb up icon -->
        <ImageView
            android:id="@+id/thumb_up_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_below="@id/content_description_text_view"
            android:layout_toEndOf="@id/content_image_view"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Collect icon -->
        <ImageView
            android:id="@+id/collect_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_below="@id/content_description_text_view"
            android:layout_toEndOf="@id/thumb_up_icon"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

    </RelativeLayout>

</LinearLayout>